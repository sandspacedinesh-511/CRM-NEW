# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=counselor_crm
DB_USER=root
DB_PASSWORD=your_secure_password
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=true

# Database Pool Configuration
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_ACQUIRE=60000
DB_POOL_IDLE=10000
DB_POOL_EVICT=1000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Server Configuration
PORT=5000
NODE_ENV=development
HEALTH_CHECK_PORT=3000

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# CORS Configuration
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Email Configuration
EMAIL_FROM=noreply@yourdomain.com
EMAIL_HOST=smtp.yourdomain.com
EMAIL_PORT=587
EMAIL_USER=your_email@yourdomain.com
EMAIL_PASS=your_email_password
EMAIL_SECURE=false

# Support Email
SUPPORT_EMAIL=support@yourdomain.com

# API Configuration
API_URL=https://yourdomain.com/api

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100

# AWS S3 Configuration (Alternative to DigitalOcean Spaces)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET_NAME=your-s3-bucket-name

# DigitalOcean Spaces Configuration
DO_SPACES_KEY=your_do_spaces_key
DO_SPACES_SECRET=your_do_spaces_secret
DO_SPACES_ENDPOINT=nyc3.digitaloceanspaces.com
DO_SPACES_BUCKET=your-do-spaces-bucket
DO_SPACES_REGION=nyc3

# File Upload Configuration
MAX_FILE_SIZE_DOCUMENT=2097152
MAX_FILE_SIZE_IMAGE=512000
MAX_FILE_SIZE_AVATAR=256000
MAX_FILE_SIZE_DEFAULT=2097152

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/combined.log
ERROR_LOG_FILE=logs/error.log

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# WebSocket Configuration
WEBSOCKET_CORS_ORIGIN=http://localhost:3000

# Test Configuration
TEST_USER_EMAIL=counselor@example.com
TEST_USER_PASSWORD=password123
TEST_STUDENT_EMAIL=test.student@example.com
TEST_STUDENT_PHONE=+1234567890
TEST_STUDENT_POSTAL_CODE=12345
TEST_STUDENT_BUDGET=50000
